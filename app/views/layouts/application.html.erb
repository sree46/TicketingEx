<!DOCTYPE html>
<html>
<head>
  <title>ScrumApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="span12">
        <% flash.each do |name, value| %>
          <div class="alert <%= alert_css_class(name) %>"><%= value %></div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
