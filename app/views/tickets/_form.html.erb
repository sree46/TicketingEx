<%= form_for @ticket do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :points %>
  <%= f.select :points, Ticket::POINTS %>

  <%= f.label :state %>
  <%= f.select :state, state_select_options %>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>

<% end %>
